<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduPress Admin</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UdemyClone.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-50">
    <!-- Desktop Sidebar -->
    <aside class="fixed inset-y-0 left-0 z-40 w-64 bg-white shadow-lg" id="sidebar">
        <!-- Logo Section -->
        <div class="flex items-center justify-between border-b border-gray-200 px-6 py-4">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="flex items-center space-x-2">
                <img src="~/img/logo.svg" alt="EduPress" class="h-8 w-auto" />
            </a>
        </div>

        <!-- Navigation Menu -->
        <nav class="flex-1 overflow-y-auto px-4 py-6">
            <ul class="space-y-2">
                <!-- Dashboard -->
                <li>
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                       class="group flex items-center rounded-lg px-3 py-2 text-sm font-medium transition-colors @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "bg-orange-100 text-orange-600 border-r-2 border-orange-500" : "text-gray-700 hover:bg-gray-100 hover:text-orange-600")">
                        <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5v14m8-14v14"></path>
                        </svg>
                        Dashboard
                    </a>
                </li>

                <!-- Website Management Dropdown -->
                <li class="relative">
                    <button class="group flex w-full items-center justify-between rounded-lg px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 hover:text-orange-600 focus:outline-none" 
                            onclick="toggleDropdown('website-dropdown')">
                        <div class="flex items-center">
                            <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                            </svg>
                            Website Management
                        </div>
                        <svg class="h-4 w-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" id="website-dropdown-arrow">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <ul class="mt-2 hidden space-y-1 pl-6" id="website-dropdown">
                        <li>
                            <a asp-area="Admin" asp-controller="Category" asp-action="Index"
                               class="block rounded-lg px-3 py-2 text-sm text-gray-600 hover:bg-orange-50 hover:text-orange-600 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Category" ? "bg-orange-50 text-orange-600" : "")">
                                Categories
                            </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="SubCategory" asp-action="Index"
                               class="block rounded-lg px-3 py-2 text-sm text-gray-600 hover:bg-orange-50 hover:text-orange-600 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "SubCategory" ? "bg-orange-50 text-orange-600" : "")">
                                Subcategories
                            </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="CourseLevel" asp-action="Index"
                               class="block rounded-lg px-3 py-2 text-sm text-gray-600 hover:bg-orange-50 hover:text-orange-600 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "CourseLevel" ? "bg-orange-50 text-orange-600" : "")">
                                Course Levels
                            </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Course" asp-action="Index"
                               class="block rounded-lg px-3 py-2 text-sm text-gray-600 hover:bg-orange-50 hover:text-orange-600 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Course" ? "bg-orange-50 text-orange-600" : "")">
                                Courses
                            </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Content" asp-action="Index"
                               class="block rounded-lg px-3 py-2 text-sm text-gray-600 hover:bg-orange-50 hover:text-orange-600 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Content" ? "bg-orange-50 text-orange-600" : "")">
                                Site Content
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- User Management Dropdown -->
                <li class="relative">
                    <button class="group flex w-full items-center justify-between rounded-lg px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 hover:text-orange-600 focus:outline-none" 
                            onclick="toggleDropdown('users-dropdown')">
                        <div class="flex items-center">
                            <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                            </svg>
                            User Management
                        </div>
                        <svg class="h-4 w-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" id="users-dropdown-arrow">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <ul class="mt-2 hidden space-y-1 pl-6" id="users-dropdown">
                        <li>
                            <a asp-area="Admin" asp-controller="User" asp-action="Students"
                               class="block rounded-lg px-3 py-2 text-sm text-gray-600 hover:bg-orange-50 hover:text-orange-600 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Students" ? "bg-orange-50 text-orange-600" : "")">
                                Students
                            </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="User" asp-action="Instructors"
                               class="block rounded-lg px-3 py-2 text-sm text-gray-600 hover:bg-orange-50 hover:text-orange-600 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Instructors" ? "bg-orange-50 text-orange-600" : "")">
                                Instructors
                            </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Role" asp-action="Index"
                               class="block rounded-lg px-3 py-2 text-sm text-gray-600 hover:bg-orange-50 hover:text-orange-600 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Role" ? "bg-orange-50 text-orange-600" : "")">
                                Roles & Permissions
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Analytics & Reports -->
                <li>
                    <a asp-area="Admin" asp-controller="Analytics" asp-action="Index"
                       class="group flex items-center rounded-lg px-3 py-2 text-sm font-medium transition-colors @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Analytics" ? "bg-orange-100 text-orange-600 border-r-2 border-orange-500" : "text-gray-700 hover:bg-gray-100 hover:text-orange-600")">
                        <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        Analytics & Reports
                    </a>
                </li>

                <!-- Settings -->
                <li>
                    <a asp-area="Admin" asp-controller="Settings" asp-action="Index"
                       class="group flex items-center rounded-lg px-3 py-2 text-sm font-medium transition-colors @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "bg-orange-100 text-orange-600 border-r-2 border-orange-500" : "text-gray-700 hover:bg-gray-100 hover:text-orange-600")">
                        <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        Settings
                    </a>
                </li>

                <div class="my-4 border-t border-gray-200"></div>

                <!-- Logout Button -->
                <li>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" class="w-full">
                        <button type="submit"
                                class="group flex w-full cursor-pointer items-center rounded-lg px-3 py-2 text-sm font-medium text-red-600 transition-colors hover:bg-red-50 hover:text-red-700">
                            <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                            </svg>
                            Logout
                        </button>
                    </form>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content Area -->
    <div class="flex min-h-screen flex-col lg:ml-64">
        <!-- Top Navigation Bar -->
        <header class="sticky top-0 z-30 border-b border-gray-200 bg-white shadow-sm">
            <div class="flex items-center justify-end px-4 py-3 sm:px-6 lg:px-8">
                <!-- Top Navigation Actions -->
                <div class="flex items-center space-x-4">
                    <!-- Search -->
                    <div class="relative sm:block">
                        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                            <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                        <input type="text" placeholder="Search..." 
                               class="placeholder-gray-500 block w-64 rounded-lg border border-gray-300 py-2 pr-3 pl-10 text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-500 focus:outline-none">
                    </div>

                    <!-- Notifications -->
                    <button class="relative rounded-lg p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-600 focus:ring-2 focus:ring-orange-500 focus:outline-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-bell-icon lucide-bell"><path d="M10.268 21a2 2 0 0 0 3.464 0" /><path d="M3.262 15.326A1 1 0 0 0 4 17h16a1 1 0 0 0 .74-1.673C19.41 13.956 18 12.499 18 8A6 6 0 0 0 6 8c0 4.499-1.411 5.956-2.738 7.326" /></svg>
                        <span class="absolute top-1 right-1 h-3 w-3 rounded-full bg-red-500"></span>
                    </button>

                    <!-- Admin Profile -->
                    <div class="relative">
                        <button class="flex items-center space-x-2 rounded-lg p-1">
                            <div class="flex h-8 w-8 items-center justify-center rounded-full bg-orange-500">
                                <span class="text-sm font-medium text-white">A</span>
                            </div>
                            <span class="text-sm font-medium text-gray-700 sm:block">Admin</span>
                        </button>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-1 px-6 py-4">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="border-t border-gray-200 bg-white px-4 py-4 sm:px-6 lg:px-8">
            <div class="flex flex-col items-center justify-between sm:flex-row">
                <p class="text-sm text-gray-500">© 2025 EduPress. All rights reserved.</p>
                <div class="mt-2 flex space-x-4 sm:mt-0">
                    <a href="#" class="text-sm text-gray-500 hover:text-orange-600">Privacy Policy</a>
                    <a href="#" class="text-sm text-gray-500 hover:text-orange-600">Terms of Service</a>
                    <a href="#" class="text-sm text-gray-500 hover:text-orange-600">Support</a>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/AdminDropdownDashboard.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>