@model OrderHeader
@{
    ViewData["Title"] = "Order Confirmation - EduPress";
    Layout = "_Layout";
}

<div class="min-h-screen bg-gray-50 py-12 sm:py-16">
    <div class="container mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
        <!-- Success Header -->
        <div class="mb-10 text-center">
            <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-green-100">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-600">
                    <path d="M20 6 9 17l-5-5" />
                </svg>
            </div>
            <h1 class="mb-2 text-3xl font-bold text-gray-900">Thank you for your purchase!</h1>
            <p class="text-lg text-gray-600">Your order has been confirmed and you now have access to your courses.</p>
        </div>

        <!-- Main Content -->
        <div class="space-y-8">
            <!-- Order Summary Card -->
            <div class="rounded-lg bg-white p-6 shadow-sm">
                <div class="mb-4 flex flex-wrap items-center justify-between gap-4 border-b border-gray-200 pb-4">
                    <h2 class="text-xl font-semibold text-gray-900">Order Summary</h2>
                    <span class="rounded-full bg-green-100 px-3 py-1 text-sm font-medium text-green-800">
                        Completed
                    </span>
                </div>

                <div class="grid grid-cols-2 gap-x-4 gap-y-5 sm:grid-cols-4">
                    <div>
                        <p class="text-sm text-gray-500">Order Number</p>
                        <p class="font-medium text-gray-900">#@Model.Id.Substring(0, 8).ToUpper()</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Order Date</p>
                        <p class="font-medium text-gray-900">@Model.OrderDate.ToString("MMMM dd, yyyy")</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Payment Method</p>
                        <p class="font-medium text-gray-900">Credit Card</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Total Amount</p>
                        <p class="font-semibold text-gray-900">@Model.OrderTotal.ToString("C")</p>
                    </div>
                </div>
            </div>

            <!-- Purchased Courses -->
            <div class="rounded-lg bg-white p-6 shadow-sm">
                <h2 class="mb-4 text-xl font-semibold text-gray-900">Your Courses</h2>
                <div class="divide-y divide-gray-100">
                    @foreach (var orderDetail in Model.OrderDetails)
                    {
                        <div class="flex flex-col items-start space-y-4 py-6 sm:flex-row sm:space-y-0 sm:space-x-6">
                            <!-- Course Image -->
                            <div class="flex-shrink-0">
                                <img src="@(orderDetail.Course.ImageUrl ?? "/img/course-image-placeholder.webp")"
                                     alt="@orderDetail.Course.Title"
                                     class="h-20 w-32 rounded-lg object-cover">
                            </div>

                            <!-- Course Details -->
                            <div class="min-w-0 flex-1">
                                <h3 class="font-semibold text-gray-900">
                                    @orderDetail.Course.Title
                                </h3>
                                <p class="mt-1 text-sm text-gray-600">@orderDetail.Course.Subtitle</p>

                                @if (orderDetail.Course.Instructor?.ApplicationUser != null)
                                {
                                    <p class="mt-1 text-sm font-medium text-gray-600">
                                        <span class="font-normal">by</span>
                                        <span>@orderDetail.Course.Instructor.ApplicationUser.FirstName @orderDetail.Course.Instructor.ApplicationUser.LastName</span>
                                    </p>
                                }
                            </div>

                            <!-- Price & Action -->
                            <div class="flex w-full flex-col items-start sm:w-auto sm:items-end">
                                <span class="mb-2 font-semibold text-gray-900">@orderDetail.Price.ToString("C")</span>
                                <a asp-area="User" asp-controller="Course" asp-action="Index" asp-route-id="@orderDetail.Course.Id"
                                   class="flex w-full items-center justify-center rounded-md bg-orange-600 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-orange-700 sm:w-auto">
                                    Start Course
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Browse More Courses Button -->
            <div class="text-center">
                <a asp-area="User" asp-controller="Home" asp-action="Index"
                   class="inline-flex items-center justify-center rounded-md border border-orange-600 bg-orange-600 px-6 py-3 text-base font-medium text-white transition-colors hover:bg-orange-700">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                        <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
                        <polyline points="9,22 9,12 15,12 15,22" />
                    </svg>
                    Browse More Courses
                </a>
            </div>

            <!-- Additional Information -->
            <div class="rounded-lg bg-white p-8 shadow-sm">
                <div class="grid gap-8 md:grid-cols-3">
                    <div class="text-center">
                        <div class="mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-full bg-blue-100">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-600">
                                <path d="M8 2v4" />
                                <path d="M16 2v4" />
                                <rect width="18" height="18" x="3" y="4" rx="2" />
                                <path d="M3 10h18" />
                            </svg>
                        </div>
                        <h4 class="mb-1 font-medium text-gray-900">Lifetime Access</h4>
                        <p class="text-sm text-gray-600">Access your courses anytime, anywhere, forever</p>
                    </div>

                    <div class="text-center">
                        <div class="mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-full bg-green-100">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-600">
                                <path d="M9 12l2 2 4-4" />
                                <path d="M21 12c.552 0 1-.448 1-1a10 10 0 0 0-10-10 10 10 0 0 0-10 10c0 .552.448 1 1 1" />
                            </svg>
                        </div>
                        <h4 class="mb-1 font-medium text-gray-900">Certificate of Completion</h4>
                        <p class="text-sm text-gray-600">Get certified when you complete your courses</p>
                    </div>

                    <div class="text-center">
                        <div class="mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-full bg-purple-100">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-purple-600">
                                <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2" />
                                <rect width="8" height="4" x="8" y="2" rx="1" ry="1" />
                                <path d="M9 14l2 2 4-4" />
                            </svg>
                        </div>
                        <h4 class="mb-1 font-medium text-gray-900">30-Day Money-Back</h4>
                        <p class="text-sm text-gray-600">Not satisfied? Get a full refund within 30 days</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>