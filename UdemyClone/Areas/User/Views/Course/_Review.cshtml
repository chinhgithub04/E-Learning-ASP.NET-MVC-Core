@model Course

@{
    var allRatings = Model.CourseRatings?.OrderByDescending(r => r.CreatedAt) ?? Enumerable.Empty<CourseRating>();
    
    var totalRatings = allRatings.Count();
    var averageRating = totalRatings > 0 ? allRatings.Average(r => r.Rating) : 0;
    
    var distribution = new Dictionary<int, int>
    {
        { 5, allRatings.Count(r => r.Rating == 5) },
        { 4, allRatings.Count(r => r.Rating == 4) },
        { 3, allRatings.Count(r => r.Rating == 3) },
        { 2, allRatings.Count(r => r.Rating == 2) },
        { 1, allRatings.Count(r => r.Rating == 1) }
    };
}

<div class="space-y-6">
    <div class="rounded-lg border border-gray-200 bg-white p-6">
        <h3 class="mb-6 text-xl font-bold text-gray-900">Student Feedback</h3>
        
        <div class="flex flex-col gap-6 lg:flex-row lg:items-start">
            <!-- Average Rating -->
            <div class="flex flex-col items-center lg:w-1/3">
                <div class="mb-2 text-6xl font-bold text-gray-900">
                    @averageRating.ToString("F1")
                </div>
                <div class="mb-2 flex items-center gap-1">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Math.Floor(averageRating))
                        {
                            <i class="fas fa-star text-xl text-orange-500"></i>
                        }
                        else if (i - averageRating < 1 && i - averageRating > 0)
                        {
                            <i class="fas fa-star-half-alt text-xl text-orange-500"></i>
                        }
                        else
                        {
                            <i class="far fa-star text-xl text-orange-500"></i>
                        }
                    }
                </div>
                <p class="text-sm text-gray-600">Course Rating</p>
                <p class="mt-1 text-xs text-gray-500">@totalRatings review@(totalRatings != 1 ? "s" : "")</p>
            </div>

            <!-- Rating Distribution Bars -->
            <div class="flex-1 space-y-2">
                @foreach (var star in new[] { 5, 4, 3, 2, 1 })
                {
                    var count = distribution[star];
                    var percentage = totalRatings > 0 ? (double)count / totalRatings * 100 : 0;
                    
                    <div class="flex items-center gap-3">
                        <div class="flex items-center gap-1">
                            @for (int i = 0; i < 5; i++)
                            {
                                if (i < star)
                                {
                                    <i class="fas fa-star text-xs text-orange-500"></i>
                                }
                                else
                                {
                                    <i class="far fa-star text-xs text-gray-300"></i>
                                }
                            }
                        </div>
                        <div class="flex-1">
                            <div class="h-2 overflow-hidden rounded-full bg-gray-200">
                                <div class="h-full bg-orange-500 transition-all duration-300" 
                                     style="width: @(percentage)%"></div>
                            </div>
                        </div>
                        <span class="w-12 text-right text-sm text-gray-600">@percentage.ToString("F0")%</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="rounded-lg border border-gray-200 bg-white">
        <!-- Header -->
        <div class="border-b border-gray-200 px-6 py-4">
            <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                <h3 class="text-lg font-bold text-gray-900">Reviews</h3>
                
                <!-- Filter -->
                <div class="relative">
                    <button id="reviewFilterBtn" 
                            class="flex cursor-pointer items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-50 focus:ring-2 focus:ring-orange-500/20 focus:outline-none">
                        <i class="fas fa-filter text-gray-500"></i>
                        <span id="reviewFilterText">All Ratings</span>
                        <i class="fas fa-chevron-down text-xs text-gray-500"></i>
                    </button>
                    <div id="reviewFilterDropdown" 
                         class="absolute top-full right-0 z-10 mt-2 hidden w-48 rounded-lg border border-gray-200 bg-white shadow-lg">
                        <div class="py-2">
                            <button class="review-filter-option flex w-full cursor-pointer items-center px-4 py-2 text-left text-sm text-gray-700 transition-colors hover:bg-orange-50 hover:text-orange-600" data-filter="all">
                                <i class="fas fa-check invisible mr-2 text-orange-500"></i>
                                <span>All Ratings</span>
                            </button>
                            <button class="review-filter-option flex w-full cursor-pointer items-center px-4 py-2 text-left text-sm text-gray-700 transition-colors hover:bg-orange-50 hover:text-orange-600" data-filter="5">
                                <i class="fas fa-check invisible mr-2 text-orange-500"></i>
                                <span>5 Stars</span>
                            </button>
                            <button class="review-filter-option flex w-full cursor-pointer items-center px-4 py-2 text-left text-sm text-gray-700 transition-colors hover:bg-orange-50 hover:text-orange-600" data-filter="4">
                                <i class="fas fa-check invisible mr-2 text-orange-500"></i>
                                <span>4 Stars</span>
                            </button>
                            <button class="review-filter-option flex w-full cursor-pointer items-center px-4 py-2 text-left text-sm text-gray-700 transition-colors hover:bg-orange-50 hover:text-orange-600" data-filter="3">
                                <i class="fas fa-check invisible mr-2 text-orange-500"></i>
                                <span>3 Stars</span>
                            </button>
                            <button class="review-filter-option flex w-full cursor-pointer items-center px-4 py-2 text-left text-sm text-gray-700 transition-colors hover:bg-orange-50 hover:text-orange-600" data-filter="2">
                                <i class="fas fa-check invisible mr-2 text-orange-500"></i>
                                <span>2 Stars</span>
                            </button>
                            <button class="review-filter-option flex w-full cursor-pointer items-center px-4 py-2 text-left text-sm text-gray-700 transition-colors hover:bg-orange-50 hover:text-orange-600" data-filter="1">
                                <i class="fas fa-check invisible mr-2 text-orange-500"></i>
                                <span>1 Star</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reviews List -->
        <div id="reviewsList" class="divide-y divide-gray-200">
            @if (allRatings.Any())
            {
                @foreach (var rating in allRatings)
                {
                    <div class="review-item p-6" data-rating="@rating.Rating">
                        <div class="flex gap-4">
                            <!-- User Avatar -->
                            <div class="flex-shrink-0">
                                @if (!string.IsNullOrEmpty(rating.User?.AvatarUrl))
                                {
                                    <img src="@rating.User.AvatarUrl" 
                                         alt="@rating.User.FirstName @rating.User.LastName" 
                                         class="h-12 w-12 rounded-full object-cover">
                                }
                                else
                                {
                                    <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-orange-400 to-orange-600 text-lg font-semibold text-white">
                                        @(rating.User?.FirstName?.Substring(0, 1).ToUpper() ?? "U")
                                    </div>
                                }
                            </div>

                            <!-- Review Content -->
                            <div class="flex-1">
                                <!-- Name and Rating -->
                                <div class="mb-2 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
                                    <div>
                                        <h4 class="font-semibold text-gray-900">
                                            @(rating.User != null ? $"{rating.User.FirstName} {rating.User.LastName}" : "Anonymous User")
                                        </h4>
                                        <div class="mt-1 flex items-center gap-2">
                                            <div class="flex items-center gap-1">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= rating.Rating)
                                                    {
                                                        <i class="fas fa-star text-sm text-orange-500"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-sm text-gray-300"></i>
                                                    }
                                                }
                                            </div>
                                            <span class="text-xs text-gray-500">
                                                @rating.CreatedAt.ToString("MMM dd, yyyy")
                                            </span>
                                            @if (rating.UpdatedAt.HasValue)
                                            {
                                                <span class="text-xs text-gray-400">(edited)</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Review Content -->
                                @if (!string.IsNullOrEmpty(rating.Review))
                                {
                                    <p class="mt-3 text-sm leading-relaxed text-gray-700">
                                        @rating.Review
                                    </p>
                                }

                                <!-- Helpful Actions -->
                                <div class="mt-4 flex items-center gap-4 text-sm">
                                    <button class="flex cursor-pointer items-center gap-2 text-gray-600 transition-colors hover:text-orange-600">
                                        <i class="far fa-thumbs-up"></i>
                                        <span>Helpful</span>
                                    </button>
                                    <button class="flex cursor-pointer items-center gap-2 text-gray-600 transition-colors hover:text-gray-900">
                                        <i class="far fa-flag"></i>
                                        <span>Report</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- No Reviews -->
                <div class="py-16 text-center">
                    <div class="mx-auto mb-4 flex h-20 w-20 items-center justify-center rounded-full bg-gray-100">
                        <i class="fas fa-star text-3xl text-gray-400"></i>
                    </div>
                    <h3 class="mb-2 text-xl font-semibold text-gray-900">No reviews yet</h3>
                    <p class="text-gray-600">Be the first to review this course!</p>
                </div>
            }
        </div>

        <!-- No Results -->
        <div id="noReviewsFound" class="hidden py-16 text-center">
            <div class="mx-auto mb-4 flex h-20 w-20 items-center justify-center rounded-full bg-gray-100">
                <i class="fas fa-search text-3xl text-gray-400"></i>
            </div>
            <h3 class="mb-2 text-xl font-semibold text-gray-900">No reviews found</h3>
            <p class="text-gray-600">Try selecting a different rating filter</p>
        </div>

        <!-- Load More Button  -->
        @if (allRatings.Count() > 10)
        {
            <div class="border-t border-gray-200 p-6 text-center">
                <button id="loadMoreReviews" 
                        class="cursor-pointer rounded-lg border border-orange-500 px-6 py-2 font-medium text-orange-600 transition-colors hover:bg-orange-50">
                    Show More Reviews
                </button>
            </div>
        }
    </div>
</div>