@model LearnViewModel

<div class="relative mx-auto h-full w-full max-w-6xl">
    @if (!string.IsNullOrEmpty(Model.CurrentVideo.VideoUrl))
    {
        <video id="courseVideo"
               class="h-full w-full bg-black object-contain"
               controls
               data-video-id="@Model.CurrentVideo.Id"
               data-course-id="@Model.Course.Id">
            <source src="@Model.CurrentVideo.VideoUrl" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    }
    else
    {
        <div class="flex h-full items-center justify-center rounded-lg bg-gray-800">
            <div class="text-center">
                <i class="fas fa-video mb-4 text-6xl text-gray-500"></i>
                <h3 class="mb-2 text-xl font-semibold text-gray-300">Video Not Available</h3>
                <p class="text-gray-500">This video is currently being processed.</p>
            </div>
        </div>
    }
</div>