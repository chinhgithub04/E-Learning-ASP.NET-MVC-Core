@model Course
@{
    var numberOfSections = Model.CourseSections.Count;
    var numberOfLectures = Model.CourseSections.SelectMany(s => s.CourseVideos).Count(v => !string.IsNullOrEmpty(v.VideoUrl));
}

<div class="space-y-5">
    <div class="space-y-3">
        <div class="flex items-center justify-between">
            <div class="flex flex-wrap items-center gap-x-3 text-sm">
                <span>@numberOfSections sections</span>
                <span class="text-gray-400">•</span>
                <span>@numberOfLectures lectures</span>
                @if (Model.Duration.HasValue)
                {
                    <span class="text-gray-400">•</span>
                    <span>
                        @if (Model.Duration.Value.TotalHours >= 1)
                        {
                            @($"{(int)Model.Duration.Value.TotalHours}h {Model.Duration.Value.Minutes}m total length")
                        }
                        else
                        {
                            @($"{Model.Duration.Value.Minutes}m total length")
                        }
                    </span>
                }
            </div>
            <button id="expand-toggle-btn" class="cursor-pointer text-sm font-medium text-blue-600 hover:text-blue-800">Expand all sections</button>
        </div>
    </div>

    @if (Model.CourseSections.Any())
    {
        <div id="curriculum-sections">
            @foreach (var s in Model.CourseSections.OrderBy(s => s.DisplayOrder))
            {
                <div class="mb-2 rounded-md bg-white">
                    <div class="section-toggle group flex cursor-pointer items-center justify-between px-4 py-3">
                        <div class="flex items-center space-x-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-down flex-shrink-0 text-gray-500 transition-transform duration-300">
                                <path d="m6 9 6 6 6-6" />
                            </svg>
                            <span class="font-medium group-hover:text-orange-500">@s.Title</span>
                        </div>
                        <div class="flex items-center space-x-6 text-sm text-gray-500">
                            <span>@s.CourseVideos.Count(c => !string.IsNullOrEmpty(c.VideoUrl)) lectures</span>
                            @if (s.Duration.HasValue)
                            {
                                @if (s.Duration.Value.TotalHours >= 1)
                                {
                                    <span>@($"{(int)s.Duration.Value.TotalHours}hr {s.Duration.Value.Minutes}min")</span>
                                }
                                else
                                {
                                    <span>@($"{s.Duration.Value.Minutes}min")</span>
                                }
                            }
                        </div>
                    </div>
                    @if (s.CourseVideos.Any())
                    {
                        <div class="video-container hidden">
                            @foreach (var video in s.CourseVideos.OrderBy(v => v.DisplayOrder))
                            {
                                @if (!string.IsNullOrEmpty(video.VideoUrl))
                                {
                                    <div class="video-content flex items-center justify-between py-2 pr-4 pl-10">
                                        <div class="flex items-center space-x-3">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 flex-shrink-0 text-gray-500">
                                                <path d="M15.033 9.44a.647.647 0 0 1 0 1.12l-4.065 2.352a.645.645 0 0 1-.968-.56V7.648a.645.645 0 0 1 .967-.56z" />
                                                <path d="M7 21h10" />
                                                <rect width="20" height="14" x="2" y="3" rx="2" />
                                            </svg>
                                            <span class="text-sm">@video.Title</span>
                                        </div>

                                        <div class="flex items-center space-x-3">
                                            @if (video.IsPreview)
                                            {
                                                <button class="cursor-pointer rounded bg-blue-500 px-2 py-1 text-sm font-medium text-white hover:bg-blue-600">Preview</button>
                                            }
                                            @if (video.Duration.HasValue)
                                            {
                                                <span class="text-xs text-gray-500">
                                                    @if (video.Duration.Value.TotalHours >= 1)
                                                    {
                                                        @($"{(int)video.Duration.Value.TotalHours:D2}:{video.Duration.Value.Minutes:D2}:{video.Duration.Value.Seconds:D2}")
                                                    }
                                                    else
                                                    {
                                                        @($"{video.Duration.Value.Minutes:D2}:{video.Duration.Value.Seconds:D2}")
                                                    }
                                                </span>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>