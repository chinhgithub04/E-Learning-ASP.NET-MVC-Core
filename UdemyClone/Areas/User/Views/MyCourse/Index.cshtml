@{
    ViewData["Title"] = "My Learning";
    string currentSection = ViewBag.CurrentSection ?? "learning";
}

<div class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        <!-- Page Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">My Learning</h1>
            <p class="mt-2 text-gray-600">Keep track of your learning journey</p>
        </div>

        <!-- Navigation Tabs -->
        <div class="mb-6 rounded-lg border border-gray-200 bg-white shadow-sm">
            <nav class="flex border-b border-gray-200">
                <a data-tab="learning" 
                   class="tab-link flex-1 cursor-pointer border-b-2 border-transparent px-6 py-4 text-center font-medium text-gray-700 transition-colors duration-200 hover:border-orange-500 hover:text-orange-500">
                    <i class="fas fa-play-circle mr-2"></i>
                    All Courses
                </a>
                <a data-tab="my-list" 
                   class="tab-link flex-1 cursor-pointer border-b-2 border-transparent px-6 py-4 text-center font-medium text-gray-700 transition-colors duration-200 hover:border-orange-500 hover:text-orange-500">
                    <i class="fas fa-list mr-2"></i>
                    My Lists
                </a>
                <a data-tab="wishlist" 
                   class="tab-link flex-1 cursor-pointer border-b-2 border-transparent px-6 py-4 text-center font-medium text-gray-700 transition-colors duration-200 hover:border-orange-500 hover:text-orange-500">
                    <i class="fas fa-heart mr-2"></i>
                    Wishlist
                </a>
            </nav>

            <!-- Content Area -->
            <div id="content-area" class="min-h-[400px] p-6">
                <div class="flex h-64 items-center justify-center">
                    <div class="text-center">
                        <div class="mx-auto mb-4 h-12 w-12 animate-spin rounded-full border-b-2 border-orange-500"></div>
                        <p class="text-gray-500">Loading your courses...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        const currentSection = '@currentSection';
    </script>
    <script src="~/js/learning-filters.js"></script>
    <script src="~/js/learning-tab.js"></script>
}