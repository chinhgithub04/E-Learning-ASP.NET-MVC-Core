@{
    ViewData["Title"] = "Become a Teacher - EduPress";
}

<div class="bg-white">
    <!-- Hero Section -->
    <div class="relative bg-cover bg-center" style="background-image: url('/img/teaching-hero.jpg');">
        <div class="container mx-auto px-4 py-16 sm:py-24">
            <div class="grid grid-cols-1 items-center gap-8 md:grid-cols-2">
                <div class="p-8 text-white">
                    <h1 class="text-4xl leading-tight font-bold text-gray-950 md:text-5xl">Share Your Knowledge With The World</h1>
                    <p class="mt-4 text-lg text-gray-900 md:text-xl">Join thousands of instructors on EduPress and help millions of students reach their goals.</p>
                    <form method="post" asp-area="User" asp-controller="Teaching" asp-action="CreateInstructor">
                        <button type="submit" class="cursor-pointer mt-2 rounded-lg bg-orange-500 px-8 py-3 font-bold text-white shadow-md transition duration-300 hover:bg-orange-600">Teach Now</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Why Teach Section -->
    <div class="container mx-auto px-4 py-16">
        <div class="mb-12 text-center">
            <h2 class="text-3xl font-bold text-gray-800">Why Teach on EduPress?</h2>
            <p class="mx-auto mt-4 max-w-3xl text-xl text-gray-600">Join our community of educators and make a difference in students' lives</p>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
            <div class="rounded-lg border border-gray-100 bg-white p-6 shadow-sm transition duration-300 hover:shadow-md">
                <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-orange-100">
                    <svg class="h-6 w-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <h3 class="mb-2 text-xl font-semibold text-gray-800">Earn Income</h3>
                <p class="text-gray-600">Create courses that generate revenue while you sleep. Our revenue sharing model ensures you're fairly compensated for your expertise.</p>
            </div>

            <div class="rounded-lg border border-gray-100 bg-white p-6 shadow-sm transition duration-300 hover:shadow-md">
                <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-orange-100">
                    <svg class="h-6 w-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                    </svg>
                </div>
                <h3 class="mb-2 text-xl font-semibold text-gray-800">Global Reach</h3>
                <p class="text-gray-600">Connect with students from around the world. Our platform is accessible in over 150 countries, giving you a truly global audience.</p>
            </div>

            <div class="rounded-lg border border-gray-100 bg-white p-6 shadow-sm transition duration-300 hover:shadow-md">
                <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-orange-100">
                    <svg class="h-6 w-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <h3 class="mb-2 text-xl font-semibold text-gray-800">Easy Tools</h3>
                <p class="text-gray-600">Our intuitive course creation tools make it simple to build engaging content. No technical expertise required.</p>
            </div>
        </div>
    </div>

    <!-- By the Numbers Section -->
    <div class="bg-gray-50 py-16">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
                <div class="rounded-lg bg-white p-8 text-center shadow-sm">
                    <span class="block text-5xl font-bold text-orange-500">50M+</span>
                    <p class="mt-2 text-xl text-gray-700">Students Worldwide</p>
                    <p class="mt-1 text-gray-500">Learning on our platform</p>
                </div>

                <div class="rounded-lg bg-white p-8 text-center shadow-sm">
                    <span class="block text-5xl font-bold text-orange-500">15K+</span>
                    <p class="mt-2 text-xl text-gray-700">Instructors</p>
                    <p class="mt-1 text-gray-500">Sharing their expertise</p>
                </div>

                <div class="rounded-lg bg-white p-8 text-center shadow-sm">
                    <span class="block text-5xl font-bold text-orange-500">$120M</span>
                    <p class="mt-2 text-xl text-gray-700">Instructor Earnings</p>
                    <p class="mt-1 text-gray-500">Paid out last year</p>
                </div>

                <div class="rounded-lg bg-white p-8 text-center shadow-sm">
                    <span class="block text-5xl font-bold text-orange-500">150+</span>
                    <p class="mt-2 text-xl text-gray-700">Countries</p>
                    <p class="mt-1 text-gray-500">Global teaching reach</p>
                </div>
            </div>
        </div>
    </div>

    <!-- How It Works -->
    <div class="container mx-auto px-4 py-16">
        <div class="mb-12 text-center">
            <h2 class="text-3xl font-bold text-gray-800">How Teaching Works</h2>
            <p class="mx-auto mt-4 max-w-3xl text-xl text-gray-600">Simple steps to start your teaching journey</p>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
            <div class="text-center">
                <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-orange-100">
                    <span class="text-2xl font-bold text-orange-500">1</span>
                </div>
                <h3 class="mb-2 text-xl font-semibold text-gray-800">Create Your Course</h3>
                <p class="text-gray-600">Use our intuitive tools to build your curriculum and upload content</p>
            </div>

            <div class="text-center">
                <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-orange-100">
                    <span class="text-2xl font-bold text-orange-500">2</span>
                </div>
                <h3 class="mb-2 text-xl font-semibold text-gray-800">Publish & Price</h3>
                <p class="text-gray-600">Set your price and make your course available to students worldwide</p>
            </div>

            <div class="text-center">
                <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-orange-100">
                    <span class="text-2xl font-bold text-orange-500">3</span>
                </div>
                <h3 class="mb-2 text-xl font-semibold text-gray-800">Promote Your Course</h3>
                <p class="text-gray-600">Use our marketing tools and your own networks to attract students</p>
            </div>

            <div class="text-center">
                <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-orange-100">
                    <span class="text-2xl font-bold text-orange-500">4</span>
                </div>
                <h3 class="mb-2 text-xl font-semibold text-gray-800">Earn & Grow</h3>
                <p class="text-gray-600">Receive payments and expand your teaching business with more courses</p>
            </div>
        </div>
    </div>

    <!-- Learn More Section - Improved -->
    <div class="bg-gradient-to-r from-orange-50 to-white py-12">
        <div class="container mx-auto px-4">
            <div class="mx-auto max-w-4xl rounded-xl bg-white p-8 shadow-md">
                <div class="flex flex-col items-center justify-between md:flex-row">
                    <div class="mb-6 md:mr-8 md:mb-0">
                        <h3 class="mb-3 text-2xl font-semibold text-gray-800">Still have questions?</h3>
                        <p class="text-lg text-gray-600">Get comprehensive information about our teaching program, revenue sharing, and support services.</p>
                    </div>
                    <div class="flex-shrink-0">
                        <a href="/teaching/learn-more" class="inline-flex items-center rounded-lg bg-orange-500 px-6 py-3 font-medium text-white shadow-sm transition duration-300 hover:bg-orange-600">
                            Learn More
                            <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-orange-500 py-16">
        <div class="container mx-auto px-4 text-center">
            <h2 class="mb-4 text-3xl font-bold text-white">Ready to Share Your Knowledge?</h2>
            <p class="mx-auto mb-8 max-w-3xl text-xl text-white">Join thousands of instructors who are changing lives through education while building their own teaching business.</p>
            <form method="post" asp-area="User" asp-controller="Teaching" asp-action="CreateInstructor">
                <button type="submit" class="cursor-pointer rounded-lg bg-white px-8 py-3 text-lg font-bold text-orange-500 shadow-lg transition duration-300 hover:bg-orange-50">Teach Now</button>
            </form>
        </div>
    </div>
</div>