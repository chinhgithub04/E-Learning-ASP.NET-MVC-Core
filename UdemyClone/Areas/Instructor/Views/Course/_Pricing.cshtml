@model Course
<div class="w-full">
    <div class="mb-8">
        <h2 class="mb-2 text-2xl font-bold text-gray-900">Pricing</h2>
        <p class="text-gray-600">Set a price for your course and choose how you want to sell it.</p>
    </div>

    <form class="space-y-8">
        <input type="hidden" asp-for="@Model.Id" id="CourseId"/>
        <!-- Course Price -->
        <div>
            <label class="mb-4 block text-sm font-medium text-gray-700">Course Price</label>
            <ul class="grid grid-cols-1 gap-6 md:grid-cols-2">
                <!-- Free Course -->
                <li id="free-card">
                    <label class="group block cursor-pointer rounded-lg border border-gray-300 p-6 transition-colors hover:border-orange-500 has-[:checked]:ring-opacity-20 has-[:checked]:border-orange-500 has-[:checked]:bg-orange-50 has-[:checked]:ring-2 has-[:checked]:ring-orange-500">
                        <div class="mb-4 flex items-center">
                            <input type="radio" name="pricing" value="free" class="mr-3 accent-orange-600 focus:ring-orange-500" @((Model.Price ?? 0) == 0 ? "checked" : "")>
                            <h3 class="text-lg font-semibold text-gray-900">Free</h3>
                        </div>
                        <p class="text-sm text-gray-600">Create a free course to build your audience and establish your expertise.</p>
                        <ul class="mt-4 space-y-2 text-sm text-gray-600">
                            <li class="flex items-center">
                                <svg class="mr-2 h-4 w-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                                Build your reputation
                            </li>
                            <li class="flex items-center">
                                <svg class="mr-2 h-4 w-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                                Attract more students
                            </li>
                        </ul>
                    </label>
                </li>

                <!-- Paid Course -->
                <li id="paid-card">
                    <label class="group block cursor-pointer rounded-lg border border-gray-300 p-6 transition-colors hover:border-orange-500 has-[:checked]:ring-opacity-20 has-[:checked]:border-orange-500 has-[:checked]:bg-orange-50 has-[:checked]:ring-2 has-[:checked]:ring-orange-500">
                        <div class="mb-4 flex items-center">
                            <input type="radio" name="pricing" value="paid" class="mr-3 accent-orange-600 focus:ring-orange-500" @((Model.Price ?? 0) == 0 ? "" : "checked")>
                            <h3 class="text-lg font-semibold text-gray-900">Paid</h3>
                        </div>
                        <p class="text-sm text-gray-600">Set a price for your course and earn revenue from every enrollment.</p>
                        <ul class="mt-4 space-y-2 text-sm text-gray-600">
                            <li class="flex items-center">
                                <svg class="mr-2 h-4 w-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                                Earn revenue
                            </li>
                            <li class="flex items-center">
                                <svg class="mr-2 h-4 w-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                                Premium positioning
                            </li>
                        </ul>
                    </label>
                </li>
            </ul>
        </div>

        <div id="price-holder" class="hidden">
            <label class="mb-2 block text-sm font-medium text-gray-700">Set your course price (USD)</label>
            <div class="relative">
                <span class="absolute top-3 left-3 text-gray-500">$</span>
                <input name="Price" type="number" asp-for="@Model.Price" class="w-full rounded-lg border border-gray-300 py-3 pr-4 pl-8 outline-none focus:border-orange-500 focus:ring-2 focus:ring-orange-500"
                       placeholder="29.99" min="1.99" step="0.01">
            </div>
            <p class="mt-2 text-sm text-gray-500">Please select the base price for your course.</p>
        </div>
    </form>
</div>