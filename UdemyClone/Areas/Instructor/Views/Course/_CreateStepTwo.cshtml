@model IEnumerable<Category>

<div class="mx-auto max-w-2xl px-6 py-12">
    <div class="text-center">
        <!-- Main heading -->
        <h1 class="mb-4 text-3xl font-bold text-gray-900">
            What category best fits the knowledge you'll share?
        </h1>

        <!-- Subtitle -->
        <p class="mb-8 text-lg text-gray-600">
            If you're not sure about the right category, you can change it later.
        </p>
    </div>

    <!-- Form -->
    <form id="stepTwoForm" class="space-y-6">
        <div>
            <label for="categorySelect" class="mb-2 block text-sm font-medium text-gray-700">
                Choose a category
            </label>
            <div class="relative">
                <select id="categorySelect"
                        name="CategoryId"
                        class="w-full appearance-none rounded-lg border border-gray-300 bg-white px-4 py-3 text-base focus:border-orange-500 focus:ring-2 focus:ring-orange-500 focus:outline-none">
                    <option value=@null>I don't know yet</option>
                    @if (Model != null)
                    {
                        @foreach (var category in Model)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
                <!-- Custom dropdown arrow -->
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
                    <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </div>
            </div>
            <p class="mt-2 text-sm text-gray-500">
                Choose the category that best describes your course content
            </p>
        </div>

    </form>

    <!-- Navigation buttons -->
    <div class="flex justify-between pt-8">
        <button type="button"
                class="prev-btn rounded-lg border border-gray-300 bg-white px-8 py-3 font-medium text-gray-700 transition-all duration-200 hover:bg-gray-50 focus:ring-2 focus:ring-gray-500/50 focus:outline-none">
            Previous
        </button>
        <button type="button"
                class="complete-btn rounded-lg bg-orange-500 px-8 py-3 font-medium text-white transition-all duration-200 hover:bg-orange-600 focus:outline-nones focus:ring-2 focus:ring-orange-500/50">
            Create course
        </button>
    </div>
</div>